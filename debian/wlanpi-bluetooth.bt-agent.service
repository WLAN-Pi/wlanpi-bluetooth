[Unit]
Description=Bluetooth Auth Agent
Requires=bluetooth.target
After=bluetooth.target
 
[Service]
ExecStart=/bin/sh -c '/usr/bin/yes | /usr/bin/bt-agent --capability=NoInputNoOutput' #autoaccept
ExecStartPost=bt-adapter --set Powered 1
ExecStartPost=bt-adapter --set Discoverable 0
ExecStartPost=bt-adapter --set Pairable 0
TimeoutStopSec=5
Type=simple
 
[Install]
WantedBy=multi-user.target
